<Window x:Class="Sample_AD_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sample_AD_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid >
        <StackPanel>
            <Button Name="btnSignIn" Content="Sign In" VerticalAlignment="Top" Margin="10" Click="btnSignIn_Click"/>
            <Button Name="btnSignOut" Content="Sign Out" VerticalAlignment="Top" Margin="10" Click="btnSignOut_Click"/>
            <TextBlock Name="lblOutput" Text="Info" Margin="10" TextWrapping="Wrap"/>
            <Image Name="imgUser" Height="180" Margin="10,0,325,0"/>
        </StackPanel>
    </Grid>
</Window>
